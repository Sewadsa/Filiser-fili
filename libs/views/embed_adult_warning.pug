		script.
			back = document.getElementById('back');
			var backHandler = function(){
				top.location.reload();
			}
			back.addEventListener('click', backHandler);
			back.addEventListener('touchstart', backHandler);

			setCookie = function(name, value, days) {
				var expires = "";
				if(days){
					var date = new Date();
					date.setTime(date.getTime() + (days*24*60*60*1000));
					expires = "; expires=" + date.toUTCString();
				}
				document.cookie = name + "=" + (value || "")  + expires + "; path=/";
			}

			accept = document.getElementById('accept');
			var acceptHandler = function(){
				setCookie('adult_warning', true, 365);
				location.reload();
			}
			accept.addEventListener('click', acceptHandler);
			accept.addEventListener('touchstart', acceptHandler);



			adb = false;
			var ifr = document.createElement('iframe');
			ifr.height = '1px';
			ifr.width = '1px';
			ifr.id = 'ads-iframe';
			ifr.src = 'https://s.spolecznosci.net/js/core2-min.js';

			document.body.appendChild(ifr);

			var dv = document.createElement('div');
			dv.style.height = '1px';
			dv.style.width = '1px';
			dv.id = 'ads-iframe2';
			dv.className = 'ad reklama';

			document.body.appendChild(dv);

			setTimeout(function(){
				var ifr = document.getElementById('ads-iframe');
				if(ifr.style.display=='none' || ifr.style.display=='hidden' || ifr.style.visibility=='hidden' || ifr.offsetHeight==0) adb = true;

				var dv = document.getElementById('ads-iframe2');
				if(dv.style.display=='none' || dv.style.display=='hidden' || dv.style.visibility=='hidden' || dv.offsetHeight==0) adb = true;

				if(adb){
					setCookie('adult_warning', true, 365);
					location.reload();
				}else{
					document.getElementsByTagName('body')[0].style.opacity = 1;
				}
			}, 500);