extend main
block content
	#faq_page.box
		.container
			section
				h2.sectionTitle Często zadawane pytania
				.clear

				.sectionBox
					ul
						li.questionBox
							.clickableBox
								span.qText #01 Czy trzeba płacić za korzystanie ze strony?
								.clear
							.answerBox
								span.aText Przeglądanie/korzystanie ze strony jak i rejestracja jest całkowicie darmowa.
						li.questionBox
							.clickableBox
								span.qText #02 Wideo zacina się lub ładuje w nieskończoność.
								.clear
							.answerBox
								span.aText W godzinach popołudniowych i wieczornych ze względu na duży ruch mogą występować w/w problemy. Warto odświeżyć player, ponieważ można trafić na mniej obciążony serwer. 
						li.questionBox
							.clickableBox
								span.qText #03 Czemu jest tak dużo reklam?
								.clear
							.answerBox
								span.aText Reklamy w hostingach należą do zewnętrznych serwisów i zarabiają na nich użytkownicy wrzucający na nie swoje materiały wideo. Nie mamy wpływu na ilość oraz częstotliwość ich występowania. Warto zainstalować rozszerzenie blokujące reklamy, aby zmniejszyć ich ilość.<br><br>Ze swojej strony mamy reklamy bannerowe oraz kilka reklam typu popup na użytkownika co kilka godzin.
						li.questionBox
							.clickableBox
								span.qText #04 Czemu Film/Serial, który oglądam zniknął z serwisu?
								.clear
							.answerBox
								span.aText.
									Jedną z głównych przyczyn zniknięć są zgłoszenia o naruszeniu praw autorskich.<br>
									Po otrzymaniu takiego w ciągu około 24h blokujemy dostęp do wymienionych stron.
						li.questionBox
							.clickableBox
								span.qText #05 Jakie hostingi plików są obsługiwane?
								.clear
							.answerBox
								span.aText Lista wszystkich dostępnych serwisów znajduje się pod adresem: 
									a.greenLink(href="/hostingi") Fili.cc/hostingi
